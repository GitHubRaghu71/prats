#!/bin/bash
source ~/myenv/bin/activate

# Change to the script's directory
cd ~/prats/sys/exe/run

# Function to display the menu
display_menu() {
    echo "Choose an option from the menu below:"
    echo "0. ğŸ”„ -Auto"
    echo "1. ğŸ”ƒ -Straddle"
    echo "2. ğŸ”‚ -Strangle"
    echo "3. ğŸ’µ -Targeted Call Sell"
    echo "4. ğŸ§± -Targeted Put Buy"
    echo "5. âš¡ï¸-Flash Falsh AMO/REGULAR"
    echo "u. ğŸ“¥ -PXY Update"
